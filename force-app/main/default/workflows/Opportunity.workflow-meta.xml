<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Opportunity_Stage_CloseDate</fullName>
        <description>Opportunity Stage Close Date</description>
        <protected>false</protected>
        <recipients>
            <field>Manager_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Owner_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Opportunity_StageCloseDate</template>
    </alerts>
    <alerts>
        <fullName>Send_Email_Alert_To_owner_and_manager</fullName>
        <description>Send Email Alert To owner and manager</description>
        <protected>false</protected>
        <recipients>
            <field>Manager_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/EmailAlertCloseDate</template>
    </alerts>
    <fieldUpdates>
        <fullName>Opportunity_Owner_Email</fullName>
        <field>Owner_Email__c</field>
        <formula>Owner.Email</formula>
        <name>Opportunity Owner Email</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateOpportunityOpco</fullName>
        <description>Update the field &quot;Opco&quot; with the value of the field &quot;Hotelcountry__c&quot;</description>
        <field>opco__c</field>
        <formula>HotelCountry__c</formula>
        <name>UpdateOpportunityOpco</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>WA_Opportunity_UpdateManagerEmail</fullName>
        <field>Manager_Email__c</field>
        <formula>Owner.Manager_Email__c</formula>
        <name>WA_Opportunity_UpdateManagerEmail</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>WF_Opp_Update_ExternalId</fullName>
        <field>Externalid__c</field>
        <formula>Id</formula>
        <name>WF_Opp_Update_ExternalId</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Opportunity_CorpoStageCloseDate</fullName>
        <active>true</active>
        <description>if the type of the opportunity is corp =&gt; send email on D-1 of the stage close date</description>
        <formula>RecordTypeId = $Label.Opportunity_Corpo_RT &amp;&amp;  Stage_Close_Date__c &gt; Today() &amp;&amp;  $User.BypassWorkflow__c = false</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Opportunity_Stage_CloseDate</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Opportunity.Stage_Close_Date__c</offsetFromField>
            <timeLength>-1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>WF01_Opportunity_CloseDateEmailAlert</fullName>
        <active>true</active>
        <formula>(CloseDate &gt;= Today())  &amp;&amp; (RecordTypeId !=  LEFT($Label.BookingRecordTypeId,15)) &amp;&amp; (RecordTypeId != LEFT($Label.MasterBookingRecordTypeId,15))  &amp;&amp; (!$User.BypassWorkflow__c) &amp;&amp; (ISPICKVAL(StageName, &quot;Qualification&quot;) || ISPICKVAL(StageName, &quot;Proposal&quot;) || ISPICKVAL(StageName, &quot;Needs Analysis&quot;) || ISPICKVAL(StageName, &quot;Negotiation&quot;))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Send_Email_Alert_To_owner_and_manager</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Opportunity.CloseDate</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>WF02_Opportunity_Manager</fullName>
        <actions>
            <name>Opportunity_Owner_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>WA_Opportunity_UpdateManagerEmail</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>true</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>WF03_Opportunity_FillOpco</fullName>
        <actions>
            <name>UpdateOpportunityOpco</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Opportunity.HotelCountry__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>User.BypassWorkflow__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Fills the field &quot;OPCO__c&quot; with the value of the field &quot;HotelCountry__c&quot;</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>WF_Opportunity_ExternalId</fullName>
        <actions>
            <name>WF_Opp_Update_ExternalId</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Remplir le champ ExternalId avec l&apos;Id Salesforce, une fois l&apos;enregistrement est créé et le champ externalId est vide</description>
        <formula>ISBLANK(Externalid__c)</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
