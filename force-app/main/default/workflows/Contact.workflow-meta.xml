<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>WA_UniqueEmailActive</fullName>
        <field>UniqueActiveEmail__c</field>
        <formula>if(!Inactive__c,Email,null)</formula>
        <name>WA_UniqueEmailActive</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>WF_Account_Update_ExternalId</fullName>
        <field>Externalid__c</field>
        <formula>Id</formula>
        <name>WF_Account_Update_ExternalId</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>WF01_Contact_uniqueActiveEmail</fullName>
        <actions>
            <name>WA_UniqueEmailActive</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>isnew() || ISCHANGED(Inactive__c ) || ISCHANGED( Email )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>WF_Contact_ExternalId</fullName>
        <actions>
            <name>WF_Account_Update_ExternalId</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Remplir le champ ExternalId avec l&#39;Id Salesforce, une fois l&#39;enregistrement est créé et le champ externalId est vide</description>
        <formula>ISBLANK( Externalid__c )</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
