        <formula>if(Status_Text__c != &#39;In Decline&#39; &amp;&amp; today() -   MaxBookingMinArrival__c &gt;= 180 &amp;&amp; today()- MaxBookingMinArrival__c &lt; 730 &amp;&amp; Number_of_Contracts__c !=0 &amp;&amp; !IsPersonAccount,
&#39;In Decline&#39;,Status_Text__c)</formula>
